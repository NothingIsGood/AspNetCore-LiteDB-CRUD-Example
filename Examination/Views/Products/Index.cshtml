@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}

<h4>List of products</h4>

@if (Model.Count() > 0)
{
    <a asp-controller="Products" asp-action="Create">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Cost</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Cost</td>
                    <td><a asp-controller="Products" asp-action="Update" asp-route-Id="@item.Id">Update</a> | <a asp-controller="Products" asp-action="Delete" asp-route-Id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There is no products. <a asp-controller="Products" asp-action="Create">Create</a></p>
}
